{
  "manifest_version": 3,
  "name": "Captur",
  "version": "1.0.14",
  "description": "Turn your favorite YouTube videos, articles, and blogs into systematic vocabulary learning. Click to save as flashcard.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.captur.academy/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-48.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://www.captur.academy/*",
      "https://captur.academy/*",
      "http://localhost:5173/*"
    ]
  }
}
